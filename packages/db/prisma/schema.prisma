generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  lastLoggedIn DateTime?
  existingTrades ExistingTrade[]
}

model Asset {
  id String @id @default(uuid())
  symbol String
  imageUrl String
  name String
  decimals Int
  existingtrades ExistingTrade[]
}

model ExistingTrade {
  id String @id @default(uuid())
  orderId String @unique
  userId String
  assetId String
  leverage Float
  openPrice Float
  closePrice Float?
  pnl Float?
  liquidated Boolean
  tradeType TradeType
  createdAt DateTime @default(now())
  asset Asset  @relation( fields: [assetId] , references: [id])
  user User @relation(fields: [userId] , references: [id])
}

enum TradeType {
  LONG
  SHORT
}


